<div class="form-horizontal">
<%= form_for(@diver) do |f| %>

  <div class="control-group">
    <label class="control-label">First name</label>
    <div class="controls">
      <%= f.text_field :firstname %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Last name</label>
    <div class="controls">
      <%= f.text_field :lastname %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
