
  <div class="formContainer">
    <h2>Listing animals</h2>
      <table id="animalsList" class="display table table-striped table-condensed">
        <thead>
        <tr>
          <th> Species Code </th>
          <th> Scientific Name </th>
          <th> Common Name </th>
          <th> Edit </th>
        </tr>
      </thead>
      <tbody>
      <% @animals.each do |animal| %>
        <tr>
          <td><%= animal.spp_code %> </td>
          <td><%= animal.scientific_name %> </td>
          <td><%= animal.common_name %> </td>
          <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        </tr>
      <% end %>
      </tbody>
      </table>
  </div>


